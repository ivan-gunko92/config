[core]
    editor = vim
    pager = less
    # detect whitespace faults and raise errors
    whitespace = trailing-space,space-before-tab
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    required = true
    process = git-lfs filter-process
[alias]
    last = log -1 HEAD
    st = status --short --branch
    s = status --short --branch
    f = fetch --all
    glog = log --color --graph  --decorate --all --format=format:\"%C(bold blue)%h%C(reset) - %C(bold cyan)%ai%C(dim white) - %an%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n %C(white)%s%C(reset)%+b%C(reset)\"
    c = checkout
    pick = cherry-pick
    a = add
    r = rebase -i
    push-lease = push --force-with-lease
    d = diff --word-diff=color
    d-cached = diff --word-diff=color --cached
    di = difftool --no-symlinks --dir-diff
    di-cached = difftool --no-symlinks --dir-diff --cached
    diff-cached = diff --cached
    b = branch --all
    commit-amend = commit --amend
    commit-amend-no-edit = commit --amend --no-edit
    rebase-continue = rebase --continue
[credential]
    helper = store
[help]
    autocorrect = 1
[github]
    user = ivan-gunko92
[grep]
    lineNumber = true
[color]
    ui = always
[tag]
    sort = version:refname
[merge]
    conflictstyle = diff3
[branch]
    autosetuprebase = always
    autosetupmerge = always
[diff]
    tool = kitty
    guitool = kitty.gui
[difftool]
    prompt = false
    trustExitCode = true
[difftool "kitty"]
    cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitty kitty +kitten diff $LOCAL $REMOTE

